<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">

            <padding android:left="8.5px"
                android:top="8.5px"
                android:right="8.5px"
                android:bottom="8.5px"/>
            <corners android:radius="5dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:centerColor="#beb7b7b7"
                android:endColor="#bea9a9a9" />

        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="#dadada"
                android:centerColor="#c4c4c4"
                android:endColor="#c7c7c7" />


        </shape>
    </item>


</layer-list>